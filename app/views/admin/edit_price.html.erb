<% form_for(:prices, @price, :url => { :action => 'update_price', :id => @price.id }) do |f| %>
        <%= render :partial => 'price_form', :locals => {:f => f, :prices => @price} %>
        <p>
            <%= f.submit "Update your Price", :id => 'prices_submit', :class => 'btn-admin' %>
        </p>
        <p>
        	<%= link_to 'Back', { :action => 'list_prices' }, :class => 'admin-command'  %>
        </p>
<% end -%>